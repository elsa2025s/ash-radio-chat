# Ash-Radio Enterprise Configuration

# Database
DATABASE_URL="postgresql://ash_radio:ash_radio_password@localhost:5432/ash_radio_db"

# Redis pour la gestion de session et cache
REDIS_URL="redis://localhost:6379"

# JWT & Sécurité
JWT_SECRET="ash-radio-enterprise-super-secret-key-2024"
JWT_EXPIRES_IN="7d"

# Serveur
PORT=3001
NODE_ENV="development"

# Stockage des médias
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10485760" # 10MB
ALLOWED_FILE_TYPES="image/jpeg,image/png,image/gif,image/webp,audio/mpeg,audio/wav,audio/ogg"

# Ash-Radio Configuration
ASH_RADIO_DOMAIN="ashradio-direct.com"
ASH_RADIO_CHAT_DOMAIN="chat.ashradio-direct.com"

# Limites et quotas
MAX_MESSAGE_LENGTH="2000"
MAX_MESSAGES_PER_MINUTE="10"
MAX_VOICE_DURATION="300" # 5 minutes
XP_PER_MESSAGE="1"
XP_PER_VOICE_SECOND="0.1"

# Modération
AUTO_MUTE_THRESHOLD="5" # Nombre de warnings avant mute auto
AUTO_BAN_THRESHOLD="10" # Nombre de warnings avant ban auto

# Notifications
WEBHOOK_URL=""
DISCORD_WEBHOOK=""

# Analytics
ENABLE_ANALYTICS="true"
ANALYTICS_RETENTION_DAYS="365"

# SSL/TLS (pour production)
SSL_CERT_PATH=""
SSL_KEY_PATH=""

# Firebase Configuration
# Remplacez ces valeurs par votre configuration Firebase
NEXT_PUBLIC_FIREBASE_API_KEY=your_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_DATABASE_URL=https://your_project_id-default-rtdb.europe-west1.firebasedatabase.app
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id

# Ash-Radio Configuration (optionnel)
NEXT_PUBLIC_SITE_NAME=Ash-Radio
NEXT_PUBLIC_SITE_URL=https://ashradio-direct.com
